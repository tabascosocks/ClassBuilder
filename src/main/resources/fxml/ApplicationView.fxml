<fx:root prefHeight="778.0" prefWidth="1098.0" spacing="10.0" type="VBox" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox fx:id="datafileSectionHBox" alignment="CENTER" onDragDropped="#onDatafileSectionHBoxDragDropped" onDragOver="#onDatafileSectionHBoxDragOver" prefHeight="80.0" style="-fx-border-color: black; -fx-border-style: dashed; -fx-border-radius: 10px;">
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
         <children>
            <StackPane>
               <children>
                  <VBox alignment="CENTER">
                     <children>
                        <HBox fx:id="loadDatafileInstructionsHBox" alignment="CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
                           <children>
                              <Button fx:id="browseUploadSpreadsheetButton" mnemonicParsing="false" onAction="#browseUploadSpreadsheetButtonClicked" text="Select File">
                                 <graphic>
                                    <FontIcon iconLiteral="mdrmz-read_more" iconSize="16" />
                                 </graphic>
                              </Button>
                              <Label fx:id="loadDatafileInstructionsLabel" text="or drag here to upload spreadsheet (.xlsx file)" wrapText="true" />
                           </children>
                        </HBox>
                        <Label fx:id="datafileErrorsLabel" text="" textFill="RED" />
                     </children>
                  </VBox>
                  <HBox fx:id="datafileInfoHBox" alignment="CENTER_LEFT" prefWidth="9999.0" spacing="8.0">
                     <children>
                        <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                           <children>
                              <HBox alignment="CENTER_LEFT" spacing="10.0">
                                 <children>
                                    <FontIcon iconLiteral="mdoal-analytics" iconSize="24" />
                                    <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label fx:id="datafileNameLabel" text="Some Spreadsheet.xlsx" />
                                       </children>
                                    </HBox>
                                 </children>
                              </HBox>
                              <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                                 <children>
                                    <Button fx:id="refreshFromDatafileButton" mnemonicParsing="false" onAction="#refreshFromDatafileButtonClicked" prefWidth="160.0" text="Refresh Data">
                                       <graphic>
                                          <FontIcon iconLiteral="mdoal-autorenew" iconSize="16" />
                                       </graphic>
                                    </Button>
                                    <Button fx:id="clearDatafileButton" mnemonicParsing="false" onAction="#onClearDatafileButtonClicked" prefWidth="160.0" text="Clear">
                                       <graphic>
                                          <FontIcon iconLiteral="mdoal-cancel" iconSize="16" />
                                       </graphic>
                                    </Button>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                        <VBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                           <children>
                              <Label fx:id="datafileSummaryLabel" text="" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </StackPane>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <TitledPane expanded="false" text="Configure Constraints">
         <content>
            <GridPane hgap="8.0" vgap="8.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <CheckBox fx:id="enableMustIncludeOthersCheckbox" mnemonicParsing="false" selected="true" text="Must Include Other Students" GridPane.rowIndex="1" />
                  <CheckBox fx:id="enableShouldIncludeOthersCheckbox" mnemonicParsing="false" selected="true" text="Should Include Other Students" GridPane.rowIndex="2" />
                  <CheckBox fx:id="enableMustAvoidOthersCheckbox" mnemonicParsing="false" selected="true" text="Must Avoid Other Students" GridPane.rowIndex="3" />
                  <CheckBox fx:id="enableShouldAvoidOthersCheckbox" mnemonicParsing="false" selected="true" text="Should Avoid Other Students" GridPane.rowIndex="4" />
                  <CheckBox fx:id="enableBalanceNumeracyCheckbox" mnemonicParsing="false" selected="true" text="Balance Numeracy Level Among Classes" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <CheckBox fx:id="enableBalanceLiteracyCheckbox" mnemonicParsing="false" selected="true" text="Balance Literacy Level Among Classes" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <CheckBox fx:id="enableBalanceSocialEmotionalCheckbox" mnemonicParsing="false" selected="true" text="Balance Social/Emotional Among Classes" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <CheckBox fx:id="enableBalanceGenderCheckbox" mnemonicParsing="false" selected="true" text="Balance Gender Among Classes" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  <HBox alignment="CENTER_LEFT" spacing="8.0" GridPane.columnIndex="2" GridPane.rowIndex="1">
                     <children>
                        <Label text="Min. Class Size" />
                        <Spinner fx:id="minClassSizeSpinner" editable="true" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="8.0" GridPane.columnIndex="2" GridPane.rowIndex="2">
                     <children>
                        <Label text="Max. Class Size" />
                        <Spinner fx:id="maxClassSizeSpinner" editable="true" />
                     </children>
                  </HBox>
                  <HBox spacing="8.0" GridPane.columnSpan="2">
                     <children>
                        <Label text="Prioritise Student Grouping" />
                        <Slider fx:id="classBalanceSensitivitySlider" blockIncrement="1.0" max="40.0" min="1.0" snapToTicks="true" value="10.0" />
                        <Label text="Prioritise Balancing Classes" />
                     </children>
                     <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                     </padding>
                  </HBox>
               </children>
            </GridPane>
         </content>
      </TitledPane>
      <Button fx:id="startSolverButton" defaultButton="true" minHeight="50.0" mnemonicParsing="false" onAction="#onStartSolverButtonClicked" prefWidth="9999.0" text="Start">
         <graphic>
            <FontIcon fx:id="startButtonFontIcon" iconLiteral="mdrmz-play_circle_outline" iconSize="24" />
         </graphic>
         <font>
            <Font size="20.0" />
         </font>
      </Button>
      <SplitPane fx:id="solverContentSplitPane" dividerPositions="0.3327974276527331" VBox.vgrow="ALWAYS">
         <items>
            <VBox>
               <children>
                  <Label text="History" />
                  <ListView fx:id="solutionHistoryList" VBox.vgrow="ALWAYS" />
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Button fx:id="clearSolutionHistoryButton" mnemonicParsing="false" onAction="#onClearSolutionHistoryButton" text="Clear">
                           <graphic>
                              <FontIcon iconLiteral="mdoal-cancel" iconSize="16" />
                           </graphic>
                        </Button>
                        <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                           <children>
                              <Button fx:id="exportSelectedSolutionButton" mnemonicParsing="false" onAction="#onExportSelectedSolutionButton" text="Export">
                                 <graphic>
                                    <FontIcon iconLiteral="mdoal-cloud_download" iconSize="16" />
                                 </graphic>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="8.0" top="8.0" />
                     </padding>
                  </HBox>
               </children>
               <padding>
                  <Insets left="8.0" right="8.0" />
               </padding>
            </VBox>
            <VBox>
               <children>
                  <HBox fx:id="solutionScoreDisplayHBox" alignment="CENTER" spacing="10.0">
                     <children>
                        <Label text="Score: " wrapText="true">
                           <font>
                              <Font size="20.0" />
                           </font>
                        </Label>
                        <Label fx:id="scoreLabel" text="-">
                           <font>
                              <Font size="28.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <WebView fx:id="selectedSolutionReportWebView" minHeight="-1.0" minWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
         </items>
      </SplitPane>
   </children>
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
</fx:root>
